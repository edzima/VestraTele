{
	"name": "edzima/vestra-crm",
	"description": "Agent, telemarketer management system for Vestra Company",
	"keywords": [
		"yii2",
		"framework",
		"advanced",
		"task-management"
	],
	"authors": [
		{
			"name": "Lukasz Wojda",
			"email": "lukasz.wojda@protonmail.com",
			"role": "Developer"
		}
	],
	"type": "project",
	"license": "BSD-3-Clause",
	"require": {
		"ext-intl": "*",
		"php": "7.4.0",
		"ext-mbstring": "*",
		"yiisoft/yii2": "2.0.37",
		"yiisoft/yii2-bootstrap": "*",
		"yiisoft/yii2-swiftmailer": "*",
		"vlucas/phpdotenv": "*",
		"beaten-sect0r/yii2-db-manager": "*",
		"samdark/sitemap": "*",
		"vova07/yii2-imperavi-widget": "*",
		"vova07/yii2-fileapi-widget": "*",
		"2amigos/yii2-selectize-widget": "*",
		"mihaildev/yii2-elfinder": "*",
		"trntv/yii2-datetime-widget": "*",
		"loveorigami/yii2-notification-wrapper": "*",
		"bower-asset/html5shiv": "*",
		"bower-asset/timecircles": "*",
		"kartik-v/yii2-widget-depdrop": "@dev",
		"kartik-v/yii2-widget-select2": "@dev",
		"kartik-v/dependent-dropdown": "@dev",
		"kartik-v/yii2-grid": "@dev",
		"kartik-v/yii2-mpdf": "dev-master",
		"kartik-v/yii2-export": "@dev",
		"demogorgorn/yii2-ajax-submit-button": "*",
		"yii2mod/yii2-comments": "*",
		"kartik-v/yii2-widget-colorinput": "*",
		"loveorigami/yii2-bootstrap-toggle": "*",
		"dmstr/yii2-adminlte-asset": "^2.1",
		"yii2tech/csv-grid": "^1.0",
		"udokmeci/yii2-phone-validator": "~1.0.3",
		"developeruz/yii2-db-rbac": "*",
		"kartik-v/yii2-number": "^1.0"
	},
	"require-dev": {
		"roave/security-advisories": "dev-master",
		"yiisoft/yii2-gii": "*",
		"samdark/yii2-webshell": "*",
		"yiisoft/yii2-debug": "^2.0"
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
	],
	"scripts": {
		"post-root-package-install": [
			"php -r \"file_exists('.env') || copy('.env.dist', '.env');\""
		]
	},
	"config": {
		"process-timeout": 1800,
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"fxp-asset": {
			"installer-paths": {
				"npm-asset-library": "vendor/npm",
				"bower-asset-library": "vendor/bower"
			}
		}
	}
}
